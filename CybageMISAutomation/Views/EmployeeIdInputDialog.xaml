<Window x:Class="CybageMISAutomation.Views.EmployeeIdInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee ID Required" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Please enter your Employee ID to continue with automation:"
                   TextWrapping="Wrap" FontSize="12" HorizontalAlignment="Center"/>
        
        <TextBox Grid.Row="2" x:Name="txtEmployeeId" FontSize="14" Height="30"
                 HorizontalAlignment="Stretch" MaxLength="10"
                 VerticalContentAlignment="Center"/>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnOK" Content="OK" Width="80" Height="30" Margin="0,0,10,0"
                    Click="BtnOK_Click" IsDefault="True"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="80" Height="30"
                    Click="BtnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>