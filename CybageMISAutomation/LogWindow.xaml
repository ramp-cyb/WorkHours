<Window x:Class="CybageMISAutomation.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Automation Logs - Cybage MIS" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#F0F0F0" BorderBrush="#D0D0D0" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Automation Logs" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                <TextBlock Text=" - Real-time logging with copy/save functionality" 
                          FontStyle="Italic" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Log DataGrid -->
        <DataGrid x:Name="dataGridLogs" Grid.Row="1" Margin="5" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True"
                  SelectionMode="Extended"
                  AlternatingRowBackground="#F8F8F8"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#E0E0E0">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" Binding="{Binding Timestamp}" Width="80" 
                                    FontFamily="Consolas" FontSize="11"/>
                <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*" 
                                    FontFamily="Consolas" FontSize="11">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Padding" Value="5,2"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
            
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="MinHeight" Value="25"/>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
        
        <!-- Control Panel -->
        <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Select rows and copy, or copy all logs" 
                          VerticalAlignment="Center" Margin="0,0,20,0" Foreground="Gray"/>
                
                <Button x:Name="btnCopy" Content="Copy Selected" Width="100" Height="25" 
                        Margin="5" Click="BtnCopy_Click" 
                        ToolTip="Copy selected log entries (or all if none selected)"/>
                
                <Button x:Name="btnSave" Content="Save to File" Width="100" Height="25" 
                        Margin="5" Click="BtnSave_Click"
                        ToolTip="Save all logs to a text file"/>
                
                <Button x:Name="btnClear" Content="Clear Logs" Width="80" Height="25" 
                        Margin="5" Click="BtnClear_Click"
                        ToolTip="Clear all log entries"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>