<Window x:Class="CybageMISAutomation.MonthlyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monthly Attendance Report" Height="700" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#4682B4" Padding="15">
            <StackPanel>
                <TextBlock Text="ðŸ“… Monthly Attendance Report" 
                          FontSize="20" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                    <TextBlock x:Name="TxtEmployeeName" Text="Employee: Loading..." 
                              FontSize="14" Foreground="LightGray" Margin="0,0,30,0"/>
                    <TextBlock x:Name="TxtDateRange" Text="Period: Loading..." 
                              FontSize="14" Foreground="LightGray"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock x:Name="TxtTotalDays" Text="Total Days: 0" 
                              FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,30,0"/>
                    <TextBlock x:Name="TxtAvgWorkHours" Text="Average Work Hours: 0:00" 
                              FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,30,0"/>
                    <TextBlock x:Name="TxtTotalWorkHours" Text="Total Work Hours: 0:00" 
                              FontSize="16" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Monthly Data Grid -->
        <GroupBox Grid.Row="1" Header="ðŸ“Š Monthly Attendance Data" FontWeight="Bold" Margin="10">
            <DataGrid x:Name="DataGridMonthly" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      AlternatingRowBackground="#F0F8FF"
                      Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="100"/>
                    <DataGridTextColumn Header="Employee Name" Binding="{Binding EmployeeName}" Width="150"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="100"/>
                    <DataGridTextColumn Header="Swipe Count" Binding="{Binding SwipeCount}" Width="100"/>
                    <DataGridTextColumn Header="In Time" Binding="{Binding InTime}" Width="100"/>
                    <DataGridTextColumn Header="Out Time" Binding="{Binding OutTime}" Width="100"/>
                    <DataGridTextColumn Header="Total Hours" Binding="{Binding TotalHours}" Width="100"/>
                    <DataGridTextColumn Header="Work Hours" Binding="{Binding ActualWorkHours}" Width="100"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        
        <!-- Footer Controls -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnRefreshMonth" Content="ðŸ”„ Refresh Monthly Data" 
                        Width="180" Height="35" Margin="10"
                        Click="BtnRefreshMonth_Click"/>
                <Button x:Name="BtnExportMonthly" Content="ðŸ’¾ Export to CSV" 
                        Width="150" Height="35" Margin="10"
                        Click="BtnExportMonthly_Click"/>
                <Button x:Name="BtnCopyMonthly" Content="ðŸ“‹ Copy Data" 
                        Width="130" Height="35" Margin="10"
                        Click="BtnCopyMonthly_Click"/>
                <Button x:Name="BtnClose" Content="âŒ Close" 
                        Width="100" Height="35" Margin="10"
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>