<Window x:Class="CybageMISAutomation.DataExtractionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Swipe Log Data Extraction Results" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2E8B57" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📊 Extracted Swipe Log Data" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
                <TextBlock x:Name="TxtReportType" Text="" 
                          FontSize="14" FontWeight="Normal" 
                          Foreground="LightGray" VerticalAlignment="Center"
                          Margin="20,0,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Data Grid -->
        <DataGrid x:Name="DataGridResults" Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="LightGray"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="100"/>
                <DataGridTextColumn Header="Employee Name" Binding="{Binding EmployeeName}" Width="200"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="100"/>
                <DataGridTextColumn Header="In Time" Binding="{Binding InTime}" Width="100"/>
                <DataGridTextColumn Header="Out Time" Binding="{Binding OutTime}" Width="100"/>
                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Footer Controls -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="TxtRecordCount" Text="Records: 0" 
                          VerticalAlignment="Center" Margin="0,0,20,0"/>
                <Button x:Name="BtnExport" Content="💾 Export to CSV" 
                        Width="120" Height="30" Margin="5"
                        Click="BtnExport_Click"/>
                <Button x:Name="BtnCopy" Content="📋 Copy Data" 
                        Width="100" Height="30" Margin="5"
                        Click="BtnCopy_Click"/>
                <Button x:Name="BtnClose" Content="❌ Close" 
                        Width="80" Height="30" Margin="5"
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>