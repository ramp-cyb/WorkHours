<Window x:Class="CybageMISAutomation.ComparisonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Today vs Yesterday Swipe Log Comparison" Height="700" Width="1600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2E8B57" Padding="15">
            <StackPanel>
                <TextBlock Text="📊 Today vs Yesterday Swipe Log Comparison" 
                          FontSize="20" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                    <TextBlock x:Name="TxtYesterdayCount" Text="Yesterday: 0 records" 
                              FontSize="14" Foreground="LightGray" Margin="0,0,30,0"/>
                    <TextBlock x:Name="TxtTodayCount" Text="Today: 0 records" 
                              FontSize="14" Foreground="LightGray"/>
                </StackPanel>
                
                <!-- Work Hours Summary -->
                <Border Background="rgba(255,255,255,0.1)" CornerRadius="5" Margin="0,10,0,0" Padding="10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                            <TextBlock Text="Yesterday Work Hours: " FontSize="14" Foreground="LightGray"/>
                            <TextBlock x:Name="TxtYesterdayWorkHours" Text="--:--" FontSize="14" FontWeight="Bold" Foreground="Yellow"/>
                            <TextBlock Text=" | Play: " FontSize="14" Foreground="LightGray" Margin="10,0,0,0"/>
                            <TextBlock x:Name="TxtYesterdayPlayHours" Text="--:--" FontSize="14" FontWeight="Bold" Foreground="LightBlue"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Today Work Hours: " FontSize="14" Foreground="LightGray"/>
                            <TextBlock x:Name="TxtTodayWorkHours" Text="--:--" FontSize="14" FontWeight="Bold" Foreground="Yellow"/>
                            <TextBlock Text=" | Play: " FontSize="14" Foreground="LightGray" Margin="10,0,0,0"/>
                            <TextBlock x:Name="TxtTodayPlayHours" Text="--:--" FontSize="14" FontWeight="Bold" Foreground="LightBlue"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- Data Grids Side by Side -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Yesterday Data -->
            <GroupBox Grid.Column="0" Header="📅 Yesterday's Data" FontWeight="Bold">
                <DataGrid x:Name="DataGridYesterday" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#FFF0F0F0"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="80"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="90"/>
                        <DataGridTextColumn Header="Gate" Binding="{Binding Gate}" Width="120"/>
                        <DataGridTextColumn Header="Direction" Binding="{Binding Direction}" Width="70"/>
                        <DataGridTextColumn Header="Swipe Time" Binding="{Binding SwipeTime}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            
            <!-- Separator -->
            <Border Grid.Column="1" Background="#DDD" Width="2"/>
            
            <!-- Today Data -->
            <GroupBox Grid.Column="2" Header="📅 Today's Data" FontWeight="Bold">
                <DataGrid x:Name="DataGridToday" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#F0F8FF"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="80"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="90"/>
                        <DataGridTextColumn Header="Gate" Binding="{Binding Gate}" Width="120"/>
                        <DataGridTextColumn Header="Direction" Binding="{Binding Direction}" Width="70"/>
                        <DataGridTextColumn Header="Swipe Time" Binding="{Binding SwipeTime}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
        
        <!-- Footer Controls -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnExportBoth" Content="💾 Export Both to CSV" 
                        Width="150" Height="35" Margin="10"
                        Click="BtnExportBoth_Click"/>
                <Button x:Name="BtnCopyBoth" Content="📋 Copy Both Data" 
                        Width="130" Height="35" Margin="10"
                        Click="BtnCopyBoth_Click"/>
                <Button x:Name="BtnRunAgain" Content="🔄 Run Full Automation Again" 
                        Width="180" Height="35" Margin="10"
                        Click="BtnRunAgain_Click"/>
                <Button x:Name="BtnClose" Content="❌ Close" 
                        Width="100" Height="35" Margin="10"
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>